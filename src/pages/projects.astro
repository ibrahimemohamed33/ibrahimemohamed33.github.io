---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Coding Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="Metagenomic Classifier Algorithm"
    img="/coverage.webp"
    desc="Uses machine learning to properly classify metagenomes as core, absent, etc"
    url="https://github.com/ibrahimemohamed33/Coverage"
    badge="Biology"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Understanding Plurals"
    img="/ling.webp"
    desc="I addressed the problem of how English speakers pluralize unfamiliar words for a class research project. Do we apply patterns of words that are close to the word in question? Is this pattern phonologic or orthographic?"
    badge="Linguistics"
    url="https://www.dropbox.com/scl/fi/pa03bqpplq37a575ad5df/Final-Project-Linguistics.pdf?rlkey=i4z7sd3a5mzqzzoegbjmg5tun&st=acr8kl78&dl=0"
  />
    <HorizontalCard
    title="UChicago Crime Logger"
    img="/uchicago_logo.webp"
    desc="Daily ETL that reads from incident reports to create a customized table with extra data points"
    url="#"
    badge="Data Engineering"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Complex Number Calculator"
    img="/complex_logo.webp"
    desc="Calculator useful for computing needed complex number formulas"
    url="https://github.com/ibrahimemohamed33/ComplexNumbers"
    badge="Math"
  />
</BaseLayout>
